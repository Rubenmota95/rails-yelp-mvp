<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'example: Pizza Hut' %>
    <%= f.input :address, placeholder: 'example: 889 German Stravenue, West Debbie, PA 29487-0768' %>
    <%= f.input :phone_number, placeholder: 'example: 5086006517' %>
    <%= f.input :category, placeholder: 'Chinese, Italian, Japanese, French or Belgian' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
