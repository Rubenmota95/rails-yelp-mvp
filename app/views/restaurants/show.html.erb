<%= render @restaurant %>

<br>
<div class="container rounded bg-light text-dark my-2">
  <h3>Reviews:</h3>
  <ul>
  <% @restaurant.reviews.each do |review|%>
    <li><%= review.content.capitalize %> | Rating: <%= '⭐️' * review.rating %> </li>
  <% end %>
  </ul>
</div>
<h1>New Review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

<div>
  <%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-primary my-1" %>
</div>
